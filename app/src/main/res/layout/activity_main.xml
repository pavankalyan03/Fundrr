<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/background_color"
                                                   tools:context=".MainActivity">

    <!-- App Name Title -->
    <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fundrr"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/startup_button"
            android:layout_marginTop="40dp"
    />

    <!-- Startup Button -->
    <Button
            android:id="@+id/startup_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Startup"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_color"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="12dp"
            android:background="@drawable/button_background"
            app:layout_constraintBottom_toTopOf="@+id/investor_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Investor Button -->
    <Button
            android:id="@+id/investor_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Investor"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="12dp"
            android:backgroundTint="@color/button_color"
            android:background="@drawable/button_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
